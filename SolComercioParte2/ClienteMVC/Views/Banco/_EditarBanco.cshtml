@using Entidades
@model Banco


<div class="modal-dialog modal-md">
    <div class="modal-content">
        <div class="modal-header" style="cursor: pointer;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            @if (Model.IdBanco != 0)
            {
                <h5 class="modal-title">
                    Actualizar Banco
                </h5>
            }
            else
            {
                <h5 class="modal-title">
                    Registrar Banco
                </h5>
            }
        </div>

        @using (Ajax.BeginForm("GrabarBanco", "Banco",
            new AjaxOptions()
            {
                OnComplete = "Finalizado",
                UpdateTargetId = "ParcialEditarBanco"
            }, new { @id = "frmGrabarBanco" }))
        {
            <div class="modal-body" id="ParcialEditarBanco">
                @Html.Partial("_EditarBancoCuerpo", Model)

            </div>



            <div class="modal-footer">
                <div class="btn-group">


                    <button type="submit" id="btnGrabarBanco" class="btn btn-primary btn-sm">
                        Grabar
                    </button>

                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                        Cancelar
                    </button>
                </div>
            </div>
        }

    </div>
</div>


<script type="text/javascript">



    function Finalizado() {
        if ($("#hdError").val() == "0") {
            bootbox.alert("La aplicación se guardó correctamente")
            parent.CerrarVentana();
        }
    }

</script>
